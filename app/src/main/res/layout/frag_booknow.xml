<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BookNowActivity">

        <TextView
            android:id="@+id/bookNowDateNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_light"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/bookNowTimeNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="60dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_light"
            android:text="Please select duration."
            android:textAlignment="center"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">

            <Button
                android:id="@+id/bookNowMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_round"
                android:text="-" />

            <TextView
                android:id="@+id/bookNowHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textSize="60dp" />

            <Button
                android:id="@+id/bookNowPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_round"
                android:text="+" />
        </LinearLayout>

        <EditText
            android:id="@+id/bookNowDesc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/cardview_border"
            android:fontFamily="@font/roboto_light"
            android:hint="Purpose for booking"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textSize="17dp" />

        <Button
            android:id="@+id/bookNowFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_selector"
            android:fontFamily="@font/roboto_light"
            android:text="Next" />

    </LinearLayout>
</ScrollView>